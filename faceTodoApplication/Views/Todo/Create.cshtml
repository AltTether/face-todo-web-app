@model faceTodoApplication.Models.Todo

@{
    ViewData["Title"] = "新規登録";
}

<h2>Create Person</h2>
<div style="color:Red">
    <p>@ViewBag.usedMsg</p>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" onsubmit="return Check()" name="inputForm" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" required="required" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mail" class="control-label"></label>
                <input asp-for="Mail" type="email" class="form-control" required="required" placeholder="Email Address" />
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" required="required" placeholder="Password"  />
                <span asp-validation-for="Password" type="password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GoogleToken" class="control-label"></label>
                <input asp-for="GoogleToken" class="form-control" />
                <span asp-validation-for="GoogleToken" class="text-danger"></span>
            </div>
            
             <div class="form-group">
                <label asp-for="TodoTitle" class="control-label"></label>
                <input asp-for="TodoTitle" class="form-control" required="required" />
                <span asp-validation-for="TodoTitle"  class="text-danger"></span>
            </div>
            
            <div class="form-group" hidden="hidden">
                <label asp-for="PersonId" class="control-label"></label>
                <input asp-for="PersonId" class="form-control" />
                <span asp-validation-for="PersonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="アカウント登録" class="btn btn-default" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="loginForm">ログイン画面に戻る</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
